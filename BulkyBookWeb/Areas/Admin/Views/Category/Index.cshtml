@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp;Create New Category
            </a>
        </div>
    </div>

    <br />

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">Category Name</th>
                <th scope="col">Display Order</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (Category category in Model)
            {
                <tr scope="row">
                    <td width="50%">
                        @category.Name
                    </td>
                    <td width="30%">
                        @category.DisplayOrder
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                            <i class="bi bi-pencil-square"></i> &nbsp; Edit
                        </a>
                        &nbsp;
                        <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                            <i class="bi bi-x-circle"></i> &nbsp; Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


